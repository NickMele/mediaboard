.download {
  position: relative;
  border-bottom: 2px solid rgba(31, 45, 60, 1);

  .title {
    padding: 20px 10px;
  }
  
  progress[value] {
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    appearance: none;
    border: none;
    width: 100%;
    height: 3px;
    background-color: transparent;
    margin: 0;

    &::-webkit-progress-bar {
      background-color: transparent;
      border: none;
    }
    &::-webkit-progress-value {
      background-color: rgba(26, 135, 240, 1);
    }
  }

}

.circle {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 2px solid red;
  margin: 50px;
  position: relative;
}
